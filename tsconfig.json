{
    "compilerOptions": {
        "composite": true, // Required for project references
        "declaration": true, // Required when "composite" is true
        "target": "es2018",//"target": "es6", // "target": "es2018",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "module": "esnext",//"module": "commonjs", // "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": ["es2022", "dom"], //"lib": [ "ES2018", "dom", "ES2022.Object" ],
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules", "lib", "src/**/_spec/*" ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": true
    }
}